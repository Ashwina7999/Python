a=list(input())
b=input()
list1=[]
for i in range(len(a)-1):
    if(a[i]==b):
        list1.append(i)
print("Character {} occurs at" .format(b),end=" ")
c=min(list1)
d=max(list1)
if(len(list1)==1):
    print(c+1)
else:
    print(c+1,end="  ")
    print(d+1)


'''
TEST CASE 1:
hello, world
,

OUTPUT:
Character , occurs at 6

TEST CASE 2:
hello, world
O

OUTPUT:
Character , occurs at 5  9
'''
